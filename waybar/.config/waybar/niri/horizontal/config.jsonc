{
  "position": "top",
  "spacing": 0,
  "height": 0,
  "reload_style_on_change": true,
  "layer": "top",
  "custom/separator": {
    "format": "::",
    "interval": "once",
    "tooltip": false
  },
  "modules-left": [
    "niri/workspaces"
  ],
  "modules-center": [
    "niri/window"
  ],
  "modules-right": [
    "tray",
    "disk",
    "custom/separator",
    "cpu",
    "custom/separator",
    "memory",
    "custom/separator",
    "pulseaudio",
    "custom/separator",
    "clock"
  ],
  "sway/window": {
    "max-length": 50
  },
  "niri/workspaces": {
    "format": "{icon}"
  },
  "tray": {
    "spacing": 10,
    "tooltip": false
  },
  "cpu": {
    "format": "cpu {usage}%",
    "interval": 2,
    "states": {
      "critical": 90
    }
  },
  "memory": {
    "format": "ram {percentage}%",
    "interval": 2,
    "states": {
      "critical": 80
    }
  },
  "battery": {
    "format": "bat {capacity}%",
    "interval": 5,
    "states": {
      "warning": 20,
      "critical": 10
    },
    "tooltip": false
  },
  "network": {
    "format-wifi": "wifi {bandwidthDownBits}",
    "format-ethernet": "enth {bandwidthDownBits}",
    "format-disconnected": "no network",
    "interval": 5,
    "tooltip": false
  },
  "pulseaudio": {
    "scroll-step": 5,
    "max-volume": 150,
    "format": "vol {volume}%",
    "on-click": "pavucontrol",
    "tooltip": false
  },
  "clock": {
    "format": "{:%a %d %b  %H:%M:%S}",
    "interval": 1,
  },
  "disk": {
    "interval": 30,
    "format": "{percentage_used}%",
    "path": "/",
    "tooltip": true,
    "tooltip-format": "{free} GB free"
  },
  "pulseaudio": {
    "format": "vol{volume}%",
    "format-muted": "Û∞ùü",
    "scroll-step": 1,
    "on-click": "pavucontrol"
  },
 }

